{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "cifp": {
      "type": "object",
      "properties": {
        "alumne": {
          "type": "array",
          "items": { "$ref": "#/$defs/alumne" }
        },
        "professor": {
          "type": "array",
          "items": { "$ref": "#/$defs/professor" }
        }
      }
    }
  },
  "$defs": {
    "alumne": {
      "type": "object",
      "required": ["id", "nom", "llinatges", "data_matricula", "curs"],
      "properties": {
        "id": { "type": "integer" },
        "nom": { "type": "string" },
        "llinatges": { "type": "string" },
        "data_naixement": { "type": "string" },
        "correu": { "type": "string" },
        "telefon": { "type": "string" },
        "adreca": { "type": "string" },
        "data_matricula": { "type": "string" },
        "curs": {
          "type": "string",
          "enum": ["DAM", "DAW", "ASIX", "SMX", "SEIA", "ER", "AUT"]
        }
      }
    },
    "professor": {
      "type": "object",
      "required": ["id", "nom", "llinatges", "data_incorporacio", "departament"],
      "properties": {
        "id": { "type": "integer" },
        "nom": { "type": "string" },
        "llinatges": { "type": "string" },
        "data_naixement": { "type": "string" },
        "correu": { "type": "string" },
        "telefon": { "type": "string" },
        "adreca": { "type": "string" },
        "data_incorporacio": { "type": "string" },
        "departament": {
          "type": "string",
          "enum": ["Informatica", "Electricitat", "Automocio"]
        },
        "assignatura": {
          "type": "array",
          "items": { "$ref": "#/$defs/assignatura" }
        }
      }
    },
    "assignatura": {
      "type": "object",
      "required": ["id_assignatura", "nom_assignatura", "cicle"],
      "properties": {
        "id_assignatura": { "type": "integer" },
        "nom_assignatura": { "type": "string" },
        "cicle": {
          "type": "string",
          "enum": ["DAM", "DAW", "ASIX", "SMX", "SEIA", "ER", "AUT"]
        },
        "data_inici": { "type": "string" },
        "data_final": { "type": "string" }
      }
    }
  }
}